{
    "compilerOptions": {
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": ".",
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "src",
        "tests",
        "types"
    ]
}
